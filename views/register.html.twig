                        {% endif %}
                        {{ form_widget(userForm.firstname, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group" style="margin-left: 40em; margin-right: 40em">
                    {{ form_label(userForm.email, null) }}
                    <div>
                        {% if userForm.email.vars.errors|length > 0 %}
                            <div class="alert alert-danger">
                                {% for error in userForm.email.vars.errors %}
                                    {{ error.message }}
                                {% endfor %}
                            </div>
                        {% endif %}
                       {% for flashMessage in app.session.flashbag.get('emailNotUnique') %}
                            <div class="alert alert-danger">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}                        
                        {{ form_widget(userForm.email, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group" style="margin-left: 40em; margin-right: 40em; margin-bottom: 10px;">
                    {{ form_label(userForm.password.first, null, { 'label_attr':  {
                        'class': 'col-sm-5 control-label'
                    }}) }}
                    {% if userForm.password.first.vars.errors|length > 0 %}
                        <div class="alert alert-danger">
                            {% for error in userForm.password.first.vars.errors %}
                                {{ error.message }}
                            {% endfor %}
                        </div>
                    {% endif %}                     
                    <div class="col-sm-4">
                        {{ form_widget(userForm.password.first, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group" style="margin-left: 40em; margin-right: 40em; margin-bottom: 10px;">
                    {{ form_label(userForm.password.second, null, { 'label_attr':  {
                        'class': 'col-sm-5 control-label'
                    }}) }}
                    <div class="col-sm-4">
                        {{ form_widget(userForm.password.second, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                <div class="form-group" style="margin-left: 40em; margin-right: 40em">
                    {{ form_label(userForm.phone, null) }}
