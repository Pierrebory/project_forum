    {% extends "layout.html.twig" %}
    
    {% block title %}Inscription{% endblock %}
    
    {% block content %}

            <blockquote class="blockquote text-center">
            <h1 style="text-align: center; margin-top: 2em;">Formulaire d'inscription</h1>

            <h4 style="text-align: center;">
                Veuillez remplir ce formulaire pour vous inscrire. <br>
                Vous recevrez une confirmation par email une fois que le formulaire sera validé par les administrateurs.
            </h4>

                
            <p style="text-align: center;" style="margin-top: 1em;">Les champs marqués d'un * sont obligatoires.</p>
 
           {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
            {% endfor %}

            

           
                
            {{ form_start(userForm, { 'attr': {'class': 'form-horizontal'} }) }}

                <div class="form-group" class="form-group" style="margin-left: 45em; margin-right: 45em; margin-top: 2em;">
                    {{ form_label(userForm.username, null) }}
                    <div>
                        {% if userForm.username.vars.errors|length > 0 %}
                            <div class="alert alert-danger">
                                {% for error in userForm.username.vars.errors %}
                                    {{ error.message }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% for flashMessage in app.session.flashbag.get('usernameNotUnique') %}
                            <div class="alert alert-danger">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}                           
                        {{ form_widget(userForm.username, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                
                
                
                <div class="form-group" style="margin-left: 40em; margin-right: 40em">
                    {{ form_label(userForm.lastname, null) }}
                    <div>
                        {% if userForm.lastname.vars.errors|length > 0 %}
                            <div class="alert alert-danger">
                                {% for error in userForm.lastname.vars.errors %}
                                    {{ error.message }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        {{ form_widget(userForm.lastname, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>
                
                
                
                <div class="form-group" style="margin-left: 40em; margin-right: 40em">
                    {{ form_label(userForm.firstname, null) }}
