    {% extends "layout.html.twig" %}
    
    {% block title %}Inscription{% endblock %}
    
    {% block content %}
            <h2>Formulaire d'inscription</h2>

            <p>Vous avez oublié votre mot de passe ? Pas de panique, entrez votre adresse email pour reçevoir un message vous permettant de modifier votre mot de passe.</p>

            <div>
            {{ form_start(resetForm, { 'attr': {'class': 'form-horizontal'} }) }}

                <div class="form-group">
                    {{ form_label(resetForm.email, null) }}
                    <div>
                        {% if resetForm.email.vars.errors|length > 0 %}
                            <div class="alert alert-danger">
                                {% for error in resetForm.email.vars.errors %}
                                    {{ error.message }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        {{ form_widget(resetForm.email, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg" value="Envoyer" />
                </div>


            {{ form_end(resetForm) }}
        </div>

        {% endblock %}
        