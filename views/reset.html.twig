    {% extends "layout.html.twig" %}
    
    {% block title %}Inscription{% endblock %}
    
    {% block content %}


        <blockquote class="blockquote text-center" style="margin-top: 6em;">
            <h1>Mot de passe oublié</h1>

            <p>Vous avez oublié votre mot de passe ? <br>
                Pas de panique, entrez votre adresse email pour recevoir un message vous permettant de modifier votre mot de passe.</p>
        </blockquote>

            {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
            {% endfor %}    

            {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger" >
                {{ flashMessage }}
            </div>
            {% endfor %}            


            <div>
            {{ form_start(resetForm, { 'attr': {'class': 'form-horizontal'} }) }}

                <div class="form-group" style="margin-left: 40em; margin-right: 40em">
                    {{ form_label(resetForm.email, null) }}
                    <div>
                        {% if resetForm.email.vars.errors|length > 0 %}
                            <div class="alert alert-danger">
                                {% for error in resetForm.email.vars.errors %}
                                    {{ error.message }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        {{ form_widget(resetForm.email, { 'attr':  {
                            'class': 'form-control'
                        }}) }}
                    </div>
                </div>

                <div class="form-group" style="margin-left: 60em; margin-right: 60em; margin-top: 2em;">
                    <input type="submit" class="button" value="Envoyer" />
                </div>


            {{ form_end(resetForm) }}

        </div>

        {% endblock %}
        