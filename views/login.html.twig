{% extends "layout.html.twig" %}
  {% block title %}Connexion{% endblock %}

  {% block content %}

  <h2 class="text-center" style="margin-top: 80px;">Login</h2>

<br>
        
            

         {% if error %}
         <div class="alert alert-danger">
             <strong>Nom d'utilisateur ou mot de passe incorrect!</strong> 
         </div>
         {% endif %}


                 <div class="form-group" class="col-sm-12" style="margin-left: 60em; margin-right: 60em">

             <form class="form-signin form-horizontal" role="form" action="{{ path('login_check') }}" method="post">
                 <div class="form-group">
                     <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                         <input type="text" name="_username" value="{{ last_username }}" class="form-control" required autofocus>
                     </div>
                 </div>
                 <div class="form-group">
                     <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                         <input type="password" name="_password" class="form-control" required>
                     </div>
                 </div>
                 <a href="{{ path('mdpoublie') }}">Mot de passe oubli√©</a>
                <div class="form-group" class="col-sm-12">
                     <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                         <button type="submit" class="btn btn-default btn-primary">Se connecter</button>
                     </div>
                 </div>
             </form>
         </div>
  {% endblock %}