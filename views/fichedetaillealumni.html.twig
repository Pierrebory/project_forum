{% extends "layout.html.twig" %}

  {% block title %}Fiche détaillée{% endblock %}


        {% block content %}
<br>
<br>
<br>
		<div  class="col-md-12 text-center">
            
            
            <h1 style="margin-top: 80px;">Fiche détaillée</h1>
 
            <br>
			
			<h2> <p class="bold"> {{ user.firstname }} {{ user.username }}</p></h2>
            
            
            <table class="table table-bordered table-hover table-responsive">
                
                <tbody>
                    
            <img src="{{ asset('img/avatar/' ~ user.avatar) }}">
            <tr><th scope="row">Promo</th> <td>{{ alumni.promo }}</td></tr>
            <tr><th scope="row">Ville</th> <td>{{ user.city }}</td></tr>
            <tr><th scope="row">Brève présentation</th> <td>{{ alumni.presentation }}</td></tr> 
            <tr><th scope="row">Compétences</th> <td>{{ alumni.skills }}</td></tr>
            <tr><th scope="row">Statut</th> <td>{{ alumni.status }}</td> </tr>
            <tr><th scope="row">Type de poste recherché</th> <td>{{ alumni.searchjob }}</td> </tr>
            <tr><th scope="row">Temps de recherche d'emploi</th> <td>{{ alumni.searchtime }}</td> </tr>
            <tr><th scope="row">Emploi actuel (si en poste)</th> <td>{{ alumni.job }}</td> </tr>
            <tr><th scope="row">Type de contrat</th> <td>{{ alumni.contract }}</td> </tr>
            <tr><th scope="row">Type d'entreprise</th> <td>{{ alumni.companytype }}</td> </tr>
            <tr><th scope="row">Nom de l'entreprise</th> <td>{{ alumni.companyname }}</td> </tr>
            <tr><th scope="row">Salaire</th> <td>{{ alumni.wage }}</td> </tr>
            <tr><th scope="row">Lien vers LinkedIn</th> <td>{{ alumni.linkedinurl  }}</td> </tr>
            <tr><th scope="row">Lien vers le CV</th> <td>{{ alumni.cv }}</td> </tr>
            <tr><th scope="row">Parrainage</th> <td>{{ alumni.sponsorship  }}</td> </tr>
            
            
            
                </tbody>
            </table>
            
            <br>
            <br>

             <a href="{{ path('updateAlumniAction', {id: user.id} ) }}"><button type="button" class="btn btn-info">Modifier</button></a> 
            
             <a href="{{ path('contacter', {id: alumni.alumni_id}) }}"><button type="button" class="btn btn-info">Contacter</button></a> 
            
            <br><br>

            
            
            
            
		
            
		

		</div>



    {% endblock %} 